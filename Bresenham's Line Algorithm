//DDA ALGO OR INCREMENTAL ALGO

#include<graphics.h> 
#include<conio.h> 
#include<stdio.h>
#include <bits/stdc++.h>
using namespace std;
 
int main() { 
int gd = DETECT ,gm, i; float x, y,dx,dy,steps; 
int x0, x1, y0, y1; 
char pathtodriver[]=""; 
initgraph(&gd, &gm, pathtodriver); 
setbkcolor(WHITE); 

cout<<"Enter the coordinate (x0,y0) ";
cin>>x0>>y0;
cout<<"Enter the coordinate (x1,y1) ";
cin>>x1>>y1;

dx = (float)(x1 - x0); dy = (float)(y1 - y0); 

	if(dx>=dy){ 
		steps = dx; 
	}else{ 
		steps = dy; 
	}
	
	dx = dx/steps; 
	dy = dy/steps; 
	x = x0; y = y0; i = 1;
	
	while(i<= steps) { 
		putpixel(x, y, WHITE); 
		x += dx; 
		y += dy; 
		i=i+1; 
	}
	getch(); 
	closegraph(); 
}
